<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <script>
      function fillDots() {
        const listItems = document.querySelectorAll(".list li a");
        listItems.forEach((item) => {
          const dateDiv = item.querySelector(".date");
          const dotsDiv = item.querySelector(".dots-fill");
          const recipeTitleDiv = item.querySelector(".recipe-title");
          if (!dateDiv || !dotsDiv || !recipeTitleDiv) return;

          dotsDiv.style.width = "auto";

          const availableSpace =
            item.offsetWidth - dateDiv.offsetWidth - recipeTitleDiv.offsetWidth;

          const dotWidth = 8;
          const numberOfDots = Math.max(
            0,
            Math.floor(availableSpace / dotWidth),
          );
          dotsDiv.textContent = ".".repeat(numberOfDots);
        });
      }

      window.addEventListener("load", fillDots);
      window.addEventListener("resize", fillDots);
    </script>
    <style>
      .toc-row {
        display: flex;
        align-items: center;
        width: 100%;
      }
      .dots-fill {
        flex: 1;
